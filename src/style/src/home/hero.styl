/* hero image */
.hero
  background: $theme.pale
  position relative
  overflow: hidden

  &-container
    width: 100%
    height: calc(100vw / 16 * 9)
    max-height: 800px
    min-height: 480px
    overflow hidden

  &-brand
    color: $theme.sec
    font-weight: 900
    font-size:56px


  &-slogan
    color: $theme.text-d
    font-weight: 700
    font-size:32px

  &-bg
    position: absolute
    display flex
    height 100%
    width 50%
    left: 50%
    top: 0px
    overflow hidden

.log-in
  position absolute
  top:24px
  right: 24px
  z-index 100

.add-to-chrome
  height 64px
  font-size: 24px
  p(x, 2)
  m(t,10)
  width 320px

  .chrome-icon
    height 32px
    width 32px


@media $media-breakpoints[sm-and-down]
  .hero
    &-brand
      font-size:36px

    &-fika-logo
      height 56px
      width 56px

    &-slogan
      font-size:24px

    &-bg
      left: 64%

  .add-to-chrome
    height 40px
    font-size: 16px
    p(x, 2)
    m(t, 6)
    width 200px

    .chrome-icon
      height 24px
      width 24px

@media $media-breakpoints[xs]
  .hero
    &-bg
      display none

// splash
.hero-splash
  height: 90%
  position: relative
  m(l, auto)

  & > :not(.bg)
    position absolute

  .wander-1
    animation: wander-sm 8s infinite ease-in-out;

  .wander-2
    animation: wander-md 10s infinite ease-in-out;

  .wander-3
    animation: wander-md 9s infinite ease-in-out;
    animation-delay 1s

  .wander-4
    animation: wander-sm 10s infinite ease-in-out;
    animation-delay 2s

  .bg
    height 100%

@keyframes wander-sm
  0%
    transform: translateY(0px)
  50%
    transform: translateY(32px)
  100%
    transform: translateY(0px)

@keyframes wander-md
  0%
    transform: translateY(0px)
  50%
    transform: translateY(50px)
  100%
    transform: translateY(0px)