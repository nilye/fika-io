.comparison
  width 100%
  max-width 720px
  m(x, auto)
  br(16px)
  background:#fff
  border-collapse: collapse;
  border-spacing: 0;

  thead
    background: $theme.pale
    th
      p(y,3)
      &:first-child
        border-radius: 16px 0 0 0
      &:last-child
        border-radius: 0 16px 0 0

  td
  th
    p(a, 2)
    text-align center
    &:first-child
      text-align: left

  tr
    border-top: 1px solid #eee;