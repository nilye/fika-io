@import "../util/*"


.btn
  no-select()
  outline none
  border-style none
  display inline-flex
  flex 0 0 auto
  align-items center
  justify-content center
  position relative
  text-decoration none
  font-weight bolder
  br-pill()
  p(x, 3)
  height 48px;
  font-size:24px;


  &-icon
    width 48px
    p(a, 0)

    &.large
      height 64px
      width 64px

  &.pri
    background: $theme.pri
    color: text-color($theme, $theme.pri)

  &[disabled]
    opacity 0.4
    filter: grayscale(1)
    pointer-events none